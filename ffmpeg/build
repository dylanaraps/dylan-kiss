#!/bin/sh -e

./configure \
    --prefix=/usr \
    --enable-shared \
    --enable-gpl \
    --enable-nonfree \
    --enable-openssl \
    --enable-version3 \
    --enable-libass \
    --enable-libmp3lame \
    --enable-libopus \
    --enable-libvorbis \
    --enable-libvpx \
    --enable-libx264 \
    --enable-libx265 \
    --enable-libwebp \
    --enable-libdrm \
    --disable-debug

make CC="${CC:-gcc}"
make DESTDIR="$1" install

# Remove examples.
rm -rf "$1/usr/share/ffmpeg/examples"
